                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="1">Process id</Label>
                            <Label Grid.Column="2">Process name</Label>
                        </Grid>
                        <ScrollViewer>
                            <ItemsPresenter />
                        </ScrollViewer>
                    </DockPanel>
                </ControlTemplate>
